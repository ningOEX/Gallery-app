{
	"compilerOptions": {
		"types": ["@dcloudio/types", "@vue/runtime-core"],
		"target": "ESNext",
		"module": "ESNext",
		"strict": true,
		"jsx": "preserve",
		"moduleResolution": "node",
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"src/**/*.d.ts"
	]
}