.publish-container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}
.form-item {
  margin-bottom: 40rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.form-item .label {
  display: block;
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.form-item .input {
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #eee;
  padding: 10rpx 0;
}
.form-item .textarea {
  width: 100%;
  height: 200rpx;
  font-size: 28rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.form-item .count {
  display: block;
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}
.form-item .picker {
  width: 100%;
}
.form-item .picker .picker-text {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
}
.uploader {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}
.uploader .upload-item {
  width: 200rpx;
  height: 200rpx;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
}
.uploader .upload-item .image {
  width: 100%;
  height: 100%;
}
.uploader .upload-item .delete-btn {
  position: absolute;
  right: 0;
  top: 0;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  border-radius: 0 0 0 8rpx;
  font-size: 30rpx;
}
.uploader .upload-btn {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 1rpx dashed #ccc;
  border-radius: 8rpx;
  background-color: #f9f9f9;
}
.uploader .upload-btn .upload-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}
.upload-tip {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}
.submit-btn {
  margin-top: 60rpx;
  background-color: #007aff;
  color: #fff;
  border-radius: 50rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
}
.submit-btn.disabled {
  background-color: #ccc;
  opacity: 0.7;
}